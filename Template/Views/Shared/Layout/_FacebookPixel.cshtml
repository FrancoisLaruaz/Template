                }(window,
                    document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');
                fbq('init', FBId);
                if (Param != null && typeof Param != "undefined") {
                    fbq('track', Type, Param);
                }
                else {
                    fbq('track', Type);
                }
                // alert('hit sent  Id : ' + FBId + '  and type : ' + Type);
            }
        }
    }
</script>