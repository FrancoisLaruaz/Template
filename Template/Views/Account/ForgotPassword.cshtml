@model Models.ViewModels.ForgotPasswordViewModel

@Html.Partial("_PageTitle")

<link href="~/Content/Views/Account/_ForgotPassword.css?@CommonsConst.StaticFileVersion.StaticFileVersionString" rel="stylesheet" />


<div class="col-md-8 col-xs-12 col-md-offset-2" style="padding-top:50px;">

    @using (Ajax.BeginForm("ForgotPassword", "Account", new { }, new AjaxOptions() { HttpMethod = "POST", OnBegin = "handleForgotPasswordBegin", OnSuccess = "ForgotPasswordSuccess", OnFailure = "ForgotPasswordFailure" }, new { @id = "ForgotPasswordModalForm" }))
    {

    <div class="col-md-12 col-xs-12" id="DivFormForgotPassword"  >
        @Html.AntiForgeryToken()
        <div class="col-md-10 col-xs-12 col-md-offset-1" style="margin-bottom:40px;">
            <p class="IndicationTxt">[[[Enter your username (email address used to log in the website) and we’ll send you an email with a link to reset your password.]]]</p>
        </div>

        <div class="sexyTBgroup col-md-6 col-xs-12 col-md-offset-3 websiteFormGroupShort">
            @Html.TextBoxFor(model => model.UserName, new { @class = "sexyTB"})
            <label class="labelSexyTb">@Html.DisplayNameFor(m => m.UserName)</label>
            <i class="fa fa-envelope SexyField-iconsSmall" aria-hidden="true"></i>
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            <div id="ErrorForgotPasswordForm" class="text-danger"></div>
        </div>
        <div class="col-md-6 col-md-offset-3 col-xs-12" style="padding-top:25px">
            <input type="submit"  value="[[[Continue]]]" class="btn website-btn " />
        </div>

    </div>


    }

    <div id="DivConfirmationForgotPassword" style="display:none;">
        <div class="center-txt IndicationTxt"  id="divMailSentoTo">
            [[[An email has been set to ]]]
        </div>
        <div class="center-txt IndicationTxt" style="padding:10px 0px;">
            [[[Tap the link in this email in order to reset your password.]]]
        </div>


        <div style="text-align:center;padding-bottom:25px;" class="col-xs-12 col-md-12">
            <i class="fa fa-envelope fa-5 WarningMailSentFA" aria-hidden="true"></i>
        </div>
        <div class="col-md-4 col-md-offset-4 col-xs-12" style="padding-top:25px">
            <input type="submit" value="[[[Back]]]" class="btn website-btn " onclick="GoBackToHomePage()" />
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/Views/Account/ForgotPassword.js?@CommonsConst.StaticFileVersion.StaticFileVersionString"></script>
}




