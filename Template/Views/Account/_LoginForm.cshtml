@model Models.ViewModels.LoginViewModel


@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    <h1>[[[You are already signed in]]]</h1>
}
else
{

    using (Ajax.BeginForm("_LoginForm", "Account", new { }, new AjaxOptions() { HttpMethod = "POST", OnBegin = "handleLoginBegin", OnSuccess = "LoginSuccess", OnFailure = "LoginFailure" }, new { @id = "LoginModalForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.URLRedirect)
        <div class="row">

            <div class="col-xs-12 col-md-12">

                <div class="sexyTBgroup col-md-10 col-xs-12 col-md-offset-1 websiteFormGroup">
                    @Html.TextBoxFor(model => model.Email, new { @class = "sexyTB"})
                    <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Email)</label>
                    <i class="fa fa-envelope includeFAIcon" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="sexyTBgroup col-md-10 col-xs-12 col-md-offset-1 websiteFormGroup">
                    @Html.PasswordFor(model => model.Password, new { @class = "sexyTB" })
                    <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Password)</label>
                    <i class="fa fa-lock includeFAIcon" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(m => m.Password)
                    <div id="ErrorLoginForm" class="text-danger"></div>
                </div>

                <div class="col-md-8 col-md-offset-2 col-xs-12">

                    <input class="styled-checkbox" id="RememberMe" type="checkbox" name="RememberMe" value="false">
                    <label for="RememberMe" style="font-weight:normal;font-size:1.45rem;">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    @Html.ValidationMessageFor(m => m.RememberMe)
                </div>

      


                

                <div class="col-md-8 col-md-offset-2 col-xs-12">
                    <input type="submit" value="[[[Log In]]]" class="btn website-btn" id="SubmitButtonLogin"   />
                </div>

                <div class="col-xs-12 col-md-12">
                    <div style="margin-top:12px;">
                        <div class="col-sm-12 col-xs-12">
                               @Html.Partial("_LoginFormLinks")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

}

<script src="~/Scripts/Views/Account/_Login.js?@Commons.StaticFileVersion.StaticFileVersionString"></script>