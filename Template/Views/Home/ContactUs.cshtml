@model Models.ViewModels.Home.ContactUsViewModel

@Html.Partial("_PageTitle")

@Html.CssImportContent("~/Content/Views/Home/ContactUs.css")

<div class="col-md-12 col-xs-12 divMaxLengthWrap" style="padding-top:50px;">
    <div class="mainDivContent" id="DivFormContactUs">
        <div class="col-md-12 col-xs-12 alignLeft">
            @using (Ajax.BeginForm("ContactUs", "Home", new { }, new AjaxOptions() { HttpMethod = "POST", OnBegin = "handleContactUsBegin", OnSuccess = "ContactUsSuccess", OnFailure = "ContactUsFailure" }, new { @id = "ContactUsForm" }))
            {


                @Html.AntiForgeryToken()
                <div class="col-md-12 col-xs-12" style="margin-bottom:30px;">
                    <p class="IndicationTxt">[[[Please enter your message. We will do our best to answer as soon as possible.]]]</p>
                </div>

                <div class="col-md-12 col-xs-12" style="margin-bottom:20px;">
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                    <div id="ErrorContactUsForm" class="text-danger"></div>
                </div>

                <div class="sexyTBgroup col-md-12 col-xs-12 websiteFormGroupShort">
                    @Html.TextBoxFor(model => model.Name, new { @class = "sexyTB" })
                    <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Name)</label>
                    <i class="fa fa-user SexyField-iconsSmall" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div class="sexyTBgroup col-md-12 col-xs-12 websiteFormGroupShort">
                    @Html.TextBoxFor(model => model.Email, new { @class = "sexyTB", @id = "EmailContact" })
                    <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Email)</label>
                    <i class="fa fa-envelope SexyField-iconsSmall" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="sexyTBgroup col-md-12 col-xs-12 websiteFormGroupShort">
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "sexyTB" })
                    <label class="labelSexyTb">@Html.DisplayNameFor(m => m.PhoneNumber)</label>
                    <i class="fa fa-phone SexyField-iconsSmall" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>

                <div class="sexyTBgroup col-md-12 col-xs-12 websiteFormGroupShort">
                    @Html.TextBoxFor(model => model.Subject, new { @class = "sexyTB" })
                    <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Subject)</label>
                    <i class="fa fa-newspaper-o SexyField-iconsSmall" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>

                <div class="col-md-12 col-xs-12">
                    @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "labelTextArea" })
                    <div>
                        @Html.TextAreaFor(m => Model.Question, new { @class = "SexyTextArea", @rows = "10" })
                        @Html.ValidationMessageFor(m => m.Question)
                    </div>
                </div>

                <div class="col-md-12 col-xs-12" style="padding-top:25px">
                    <input type="submit" value="[[[Send]]]" class="btn website-btn" />
                </div>




            }
        </div>
    </div>

    <div class="col-md-12 col-xs-12" id="DivConfirmationContactUs" style="display:none">

        <div class="center-txt IndicationTxt" style="padding:30px 0px;">
            [[[Thanks for your message. We will respond to your enquiry as soon as possible.]]]
        </div>
        <div class="col-md-10 col-xs-12 col-md-offset-1">
            @Html.Partial("_ConfirmationCheck")
        </div>
        <div class="col-md-4 col-md-offset-4 col-xs-12" style="padding-top:25px;margin-bottom:40px;">
            <input type="submit" value="[[[Back]]]" class="btn website-btn BackToHomePageButton_js" />
        </div>

    </div>

</div>


@section scripts {
    @Html.ScriptImportContent("~/Scripts/Views/Home/ContactUs.js")
}



