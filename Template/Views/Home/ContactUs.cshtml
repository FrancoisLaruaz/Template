@model Models.ViewModels.ContactUsViewModel

@Html.Partial("_PageTitle")



<div class="col-md-8 col-xs-12 col-md-offset-2" style="padding-top:50px;">

    @using (Ajax.BeginForm("ContactUs", "Account", new { }, new AjaxOptions() { HttpMethod = "POST", OnBegin = "handleContactUsBegin", OnSuccess = "ContactUsSuccess", OnFailure = "ContactUsFailure" }, new { @id = "ContactUsForm" }))
    {

        <div class="col-md-12 col-xs-12" id="DivFormContactUs">
            @Html.AntiForgeryToken()
            <div class="col-md-12 col-xs-12" style="margin-bottom:40px;">
                <p class="IndicationTxt">[[[Please enter a new password to complete your password reset.]]]</p>
            </div>

            <div class="col-md-8 col-md-offset-2 col-xs-12">
                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                <div id="ErrorContactUsForm" class="text-danger"></div>
            </div>

            <div class="sexyTBgroup col-md-8 col-md-offset-2 col-xs-12 websiteFormGroupShort">
                @Html.TextBoxFor(model => model.Name, new { @class = "sexyTB" })
                <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Name)</label>
                <i class="fa fa-user SexyField-iconsSmall" aria-hidden="true"></i>
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="sexyTBgroup col-md-8 col-md-offset-2 col-xs-12 websiteFormGroupShort">
                @Html.TextBoxFor(model => model.Email, new { @class = "sexyTB" })
                <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Email)</label>
                <i class="fa fa-envelope SexyField-iconsSmall" aria-hidden="true"></i>
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="sexyTBgroup col-md-8 col-md-offset-2 col-xs-12 websiteFormGroupShort">
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "sexyTB" })
                <label class="labelSexyTb">@Html.DisplayNameFor(m => m.PhoneNumber)</label>
                <i class="fa fa-phone SexyField-iconsSmall" aria-hidden="true"></i>
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>

            <div class="sexyTBgroup col-md-8 col-md-offset-2 col-xs-12 websiteFormGroupShort">
                @Html.TextBoxFor(model => model.Subject, new { @class = "sexyTB" })
                <label class="labelSexyTb">@Html.DisplayNameFor(m => m.Subject)</label>
                <i class="fa fa-newspaper-o SexyField-iconsSmall" aria-hidden="true"></i>
                @Html.ValidationMessageFor(m => m.Subject)
            </div>

            <div class="col-md-8 col-md-offset-2 col-xs-12">
                @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextAreaFor(m => Model.Question, new { @class = "form-control", @rows = "10" })
                    @Html.ValidationMessageFor(m => m.Question)
                </div>
            </div>

            <div class="col-md-6 col-md-offset-3 col-xs-12" style="padding-top:25px">
                <input type="submit" value="[[[Send]]]" class="btn website-btn"  />
            </div>

        </div>


    }

</div>


@section scripts {
<script src="~/Scripts/Views/Home/ContactUsViewModel.js?@CommonsConst.StaticFileVersion.StaticFileVersionString"></script>
}



